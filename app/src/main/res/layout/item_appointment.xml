<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    android:backgroundTint="@color/card_background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_appointment_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data: 25/12/2025"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/blue_primary"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/text_appointment_doctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Doctor: Dr. Ana Popescu"
            android:textSize="16sp"
            android:textColor="@color/text_primary_dark"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/text_appointment_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: În așteptare"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_secondary_dark"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/text_appointment_admin_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mesaj admin: Vă așteptăm cu drag!"
            android:textSize="14sp"
            android:textColor="@color/text_secondary_dark"
            android:visibility="gone" />

    </LinearLayout>
</androidx.cardview.widget.CardView>