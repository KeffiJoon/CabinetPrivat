<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PatientProfileActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_patient_profile"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blue_primary"
        app:titleTextColor="@android:color/background_dark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_patient_profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/image_patient_photo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/profilut2"
                android:contentDescription="Patient Profile Image" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/label_patient_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Name:" android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/image_patient_photo"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/text_patient_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                tools:text="Patient Name Example" app:layout_constraintBaseline_toBaselineOf="@id/label_patient_name"
                app:layout_constraintStart_toEndOf="@id/label_patient_name"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/label_patient_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Email:" android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/text_patient_name"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/text_patient_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                tools:text="example@mail.com" app:layout_constraintBaseline_toBaselineOf="@id/label_patient_email"
                app:layout_constraintStart_toEndOf="@id/label_patient_email"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/label_patient_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Phone:" android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/text_patient_email"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/text_patient_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                tools:text="0712345678" app:layout_constraintBaseline_toBaselineOf="@id/label_patient_phone"
                app:layout_constraintStart_toEndOf="@id/label_patient_phone"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/label_patient_dob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Date of Birth:" android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/text_patient_phone"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/text_patient_dob"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                tools:text="23/04/1990" app:layout_constraintBaseline_toBaselineOf="@id/label_patient_dob"
                app:layout_constraintStart_toEndOf="@id/label_patient_dob"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/label_patient_blood_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Blood Type:" android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/text_patient_dob"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/text_patient_blood_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                tools:text="A II (Rh+)" app:layout_constraintBaseline_toBaselineOf="@id/label_patient_blood_type"
                app:layout_constraintStart_toEndOf="@id/label_patient_blood_type"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/label_patient_allergies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Allergies:" android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/text_patient_blood_type"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/text_patient_allergies"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                tools:text="Pollen, Ragweed" app:layout_constraintBaseline_toBaselineOf="@id/label_patient_allergies"
                app:layout_constraintStart_toEndOf="@id/label_patient_allergies"
                app:layout_constraintEnd_toEndOf="parent"/>

            <Button
                android:id="@+id/button_edit_profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Edit Profile" android:backgroundTint="#2979FF"
                app:layout_constraintTop_toBottomOf="@id/text_patient_allergies"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <Button
                android:id="@+id/button_view_medical_history"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="View Medical History" android:backgroundTint="#2979FF"
                app:layout_constraintTop_toBottomOf="@id/button_edit_profile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="24dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar_profile"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

